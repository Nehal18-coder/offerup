    <%= f.label :status_id %>
    <!-- Input for status_id start -->
    <%= f.collection_select :status_id, Status.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for status_id end -->
    <% if status_was_invalid %>
      <% furniture.errors.full_messages_for(:status).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for status_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
