<%= form_with(model: @furniture, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_area :title, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.file_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_area :category, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>

    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :google_map %>

    <%= f.text_field :google_map, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :status_id %>

    <%= f.collection_select :status_id, Status.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create furniture", class: "btn btn-block btn-outline-secondary" %>
<% end %>
